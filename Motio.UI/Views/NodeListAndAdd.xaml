<UserControl x:Class="Motio.UI.Views.NodeListAndAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Motio.UI.Views"
             LayoutUpdated="NodeListAndAdd_LayoutUpdated"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

<!-- DataContext = IHasAttached -->
    <StackPanel Orientation="Horizontal">
        <local:NodeListView x:Name="nodeScroll"/>
        <Button Focusable="False" Margin="5 0" Padding="0 10" x:Name="plusBtn" Style="{StaticResource plusButton}" Content="+" PreviewMouseUp="PlusBtn_PreviewMouseUp"/>
    </StackPanel>
</UserControl>
