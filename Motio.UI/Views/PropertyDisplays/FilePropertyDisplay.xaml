<UserControl x:Class="Motio.UI.Views.PropertyDisplays.FilePropertyDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Motio.UI.Views.PropertyDisplays"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <local:PropertyNameDisplay/>
        <StackPanel Orientation="Horizontal">
            <Button Content="..." Padding="5 0" ToolTip="Browse" Click="Button_Click"/>
            <TextBlock Margin="3 0 0 0" Text="{Binding StaticValue}" Foreground="{DynamicResource TextColor}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
