<UserControl x:Class="Motio.UI.Views.PropertyDisplays.BoolPropertyDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Motio.UI.Views.PropertyDisplays"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <local:PropertyNameDisplay/>
        <CheckBox x:Name="checkBox" Focusable="False" IsChecked="{Binding Value}" Foreground="{DynamicResource TextColor}"/>
    </StackPanel>
</UserControl>
