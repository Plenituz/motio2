         la bonne taille et quand il est trop petit pareil mais dans l'autre sens
    -->
    <Border Background="Black">
        <views:FilterableList x:Name="filteredList" 
                          Margin="1.5"
                          MinWidth="100">
        </views:FilterableList>
    </Border>
</local:BaseOverEverything>
